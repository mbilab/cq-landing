html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Class Quest Form
    link(rel='stylesheet' type='text/css' href='build.css')
  body
    #container
      .header
        #homework
        #report
        #study
        #synthetic
      #apply-process
        .ui.huge.breadcrumb
          a.section Home
          i.right.chevron.icon.divider
          a.section hihi
          i.right.arrow.icon.divider
          .active.section rrrrrrrr
      .content
        #important
          |*必填!!
          .ui.huge.form
            input.mail(type='text' name='Gmail'  placeholder='Gmail')
